# SharedTable Mobile Environment Variables
# Copy this file to .env and fill in your values

# API Configuration
API_BASE_URL=http://localhost:3000/api
# For production, use: https://sharedtable.vercel.app/api

# Expo Configuration
EXPO_PUBLIC_API_URL=http://localhost:3000/api

# Stripe Configuration (Public Key)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Sentry Configuration (Optional)
EXPO_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Environment
NODE_ENV=development
# Options: development, production, test

# Push Notifications (Optional)
EXPO_PUBLIC_PUSH_NOTIFICATION_PROJECT_ID=your-expo-project-id

# Google Maps API Key (Optional, for location features)
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Feature Flags (Optional)
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=false
EXPO_PUBLIC_ENABLE_DEBUG_MENU=true

# App Configuration
EXPO_PUBLIC_APP_NAME=SharedTable
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_MIN_API_VERSION=1