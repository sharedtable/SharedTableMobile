{
  "expo": {
    "name": "SharedTable",
    "slug": "sharedtable",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#E24849"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "edu.stanford.sharedtable",
      "buildNumber": "1",
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "NSCameraUsageDescription": "SharedTable needs access to your camera to take profile photos.",
        "NSPhotoLibraryUsageDescription": "SharedTable needs access to your photo library to select profile photos.",
        "NSLocationWhenInUseUsageDescription": "SharedTable uses your location to show nearby dining events."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#E24849"
      },
      "package": "edu.stanford.sharedtable",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./src/assets/favicon.png"
    },
    "plugins": [
      "expo-camera",
      "expo-image-picker",
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./src/assets/notification-icon.png",
          "color": "#E24849",
          "sounds": []
        }
      ],
      "expo-font"
    ],
    "extra": {
      "apiUrl": "http://localhost:3000/api",
      "productionApiUrl": "https://sharedtable.vercel.app/api",
      "eas": {
        "projectId": "your-project-id-here"
      }
    },
    "updates": {
      "url": "https://u.expo.dev/your-project-id-here"
    },
    "runtimeVersion": "1.0.0"
  }
}
